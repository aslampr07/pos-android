<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="image"
            type="com.kadbyte.client.model.ItemImage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/AddImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banana"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/rightBlank"
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_constraintRight_toRightOf="@id/AddImageView"
            app:layout_constraintTop_toTopOf="@id/AddImageView" />

        <ImageButton
            android:id="@+id/removeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_cancel"
            app:layout_constraintBottom_toBottomOf="@id/rightBlank"
            app:layout_constraintLeft_toLeftOf="@id/rightBlank" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:visibility="@{image.progressBarVisibility ? View.VISIBLE: View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/AddImageView"
            app:layout_constraintLeft_toLeftOf="@id/AddImageView"
            app:layout_constraintRight_toRightOf="@id/AddImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>